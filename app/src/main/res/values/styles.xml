<resources>

    <style name="LauncherTheme" parent="AppTheme.NavOverlay.NoActionBar">
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- Text Styles -->

    <style name="Text.WithBackground" parent="Text.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <style name="Text.WithBackground.Full">
        <item name="android:background">@drawable/side_pad_bg_blue</item>
        <item name="android:drawableLeft">@drawable/ic_camera_full</item>
    </style>

    <style name="Text.WithBackground.Third">
        <item name="android:background">@drawable/side_pad_bg_pink</item>
        <item name="android:drawableLeft">@drawable/ic_camera_one</item>
    </style>

    <style name="Text.WithBackground.TwoThirds">
        <item name="android:background">@drawable/side_pad_bg_purple</item>
        <item name="android:drawableLeft">@drawable/ic_camera_two</item>
    </style>

    <!-- END Text Styles -->

    <style name="Card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:padding">64dp</item>
    </style>

    <style name="Column">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Column.2">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="keyboard_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="IconView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:drawableTop">@drawable/ic_block</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">36sp</item>
    </style>


    <!-- Main menu styling: -->

    <style name="MainCard">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:elevation">8dp</item>
        <item name="cardCornerRadius">4dp</item>
    </style>


    <style name="MainTitle">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:elevation">8dp</item>
    </style>


    <style name="MainIcon">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MainIcon.Vert">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="KnowledgeAnswer">
        <item name="android:background">@drawable/knowledge_bg</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="KnowledgeRow" parent="Linear.Horizontal">
        <item name="android:weightSum">2</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
