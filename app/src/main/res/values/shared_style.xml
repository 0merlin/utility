<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="AppThemeDialog" parent="Base.Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Light" parent="Base.Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar.IgnoreCutout">
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <style name="AppTheme.NavOverlay">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NavOverlay.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Linear.Holo">
        <item name="android:background">@drawable/holo_background_blue</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="Linear.Holo.Pink">
        <item name="android:background">@drawable/holo_background_pink</item>
    </style>

    <style name="Linear.Holo.Orange">
        <item name="android:background">@drawable/holo_background_orange</item>
    </style>

    <style name="Linear.Holo.Cyan">
        <item name="android:background">@drawable/holo_background_cyan</item>
    </style>

    <style name="Linear.Holo.Red">
        <item name="android:background">@drawable/holo_background_red</item>
    </style>

    <style name="Linear.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Linear.Horizontal.Padding">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="Linear.Padding">
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="Outer" parent="Linear">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="OuterPadding" parent="Linear.Padding">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Text.Fit">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Text.Heading">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <style name="Text.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Large.Center">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Text.Right">
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_gravity">end</item>
    </style>

    <style name="Text.Mono">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Scroll">
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fadeScrollbars">true</item>
    </style>

    <style name="LoginProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Login" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>

        <item name="colorControlNormal">@color/muted</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/muted</item>

        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="Button.Fit">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Button.Login">
        <item name="android:background">@drawable/btn_login</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="Fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginTop">@dimen/fab_margin</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
        <item name="android:layout_marginStart">@dimen/fab_margin</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>
        <item name="android:gravity">center</item>
    </style>

</resources>