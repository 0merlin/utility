<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".GPSActivity">

    <TextView
        android:id="@+id/gps_time_data"
        style="@style/Text.Right.Mono"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/gps_lat_long"
        style="@style/Text.Right.Mono"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>


    <TextView
        android:id="@+id/gps_speed"
        style="@style/Text.Right.Mono"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/gps_lat_long"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/gps_acceleration"
        style="@style/Text.Right.Mono"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/gps_speed"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <LinearLayout
        style="@style/CardLL"
        android:layout_above="@id/gps_time_data"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gps_bearing"
            style="@style/Text.Right.Mono"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/gps_altitude"
            style="@style/Text.Right.Mono"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/gps_accuracy"
            style="@style/Text.Right.Mono"
            android:layout_width="0dp"
            android:layout_weight="1"/>

    </LinearLayout>


</RelativeLayout>