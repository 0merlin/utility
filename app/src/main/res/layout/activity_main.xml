<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Scroll"
    android:fitsSystemWindows="true"
    tools:ignore="HardcodedText">

    <GridLayout
        android:id="@+id/mainGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alignmentMode="alignBounds"
        android:columnCount="@integer/column_count"
        android:columnOrderPreserved="true">

        <TextView
            android:id="@+id/goto_scan"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_barcode_scan"
            android:text="Barcode Scan" />

        <TextView
            android:id="@+id/goto_osm_maps"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_maps"
            android:text="OSM Maps" />

        <TextView
            android:id="@+id/goto_files"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_file"
            android:text="File Browser" />

        <TextView
            android:id="@+id/goto_dev_rant"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_images"
            android:text="Dev Rant" />

        <TextView
            android:id="@+id/goto_list"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_list"
            android:text="File List" />

        <TextView
            android:id="@+id/goto_quote_api"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_quote"
            android:text="Quote API" />

        <TextView
            android:id="@+id/goto_car_dock"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_car"
            android:text="Car Dock" />

        <TextView
            android:id="@+id/goto_info"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_device"
            android:text="Device Info" />

        <TextView
            android:id="@+id/goto_gps"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_gps"
            android:text="GPS" />

        <TextView
            android:id="@+id/goto_qr"
            style="@style/MainTitle"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/ic_main_barcode_scan"
            android:text="QR Code" />

        <TextView
            android:id="@+id/goto_sensors"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_sensors"
            android:text="Sensors" />

        <TextView
            android:id="@+id/goto_scrum_poker"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_scrum"
            android:text="Scrum Poker" />

        <TextView
            android:id="@+id/goto_images"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_images"
            android:text="Image Downloader" />

        <TextView
            android:id="@+id/goto_daily_comic"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_images"
            android:text="Daily Comic" />

        <TextView
            android:id="@+id/goto_draw"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_draw"
            android:text="Draw" />

        <TextView
            android:id="@+id/goto_poc"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_poc"
            android:text="POC Screens" />

        <TextView
            android:id="@+id/goto_map_points"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_maps"
            android:text="Map points" />
    </GridLayout>
</ScrollView>