<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Scroll"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">


    <GridLayout
        android:id="@+id/mainGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alignmentMode="alignBounds"
        android:columnCount="2"
        android:columnOrderPreserved="true"
        android:paddingBottom="72dp"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/goto_scan"
            style="@style/MainTitle"
            android:drawableTop="@drawable/main_barcode_scan"
            android:text="Barcode Scan"/>

        <TextView
            android:id="@+id/goto_osm_maps"
            style="@style/MainTitle"
            android:drawableTop="@drawable/main_maps"
            android:text="OSM Maps"/>

        <TextView
            android:id="@+id/goto_files"
            style="@style/MainTitle"
            android:drawableTop="@drawable/main_file"
            android:text="File Browser"/>

        <TextView
            android:id="@+id/goto_quote"
            style="@style/MainTitle"
            android:drawableTop="@drawable/main_quote"
            android:text="Quote"/>

        <TextView
            android:id="@+id/goto_quote_api"
            style="@style/MainTitle"
            android:drawableTop="@drawable/main_quote"
            android:text="Quote API"/>

        <TextView
            android:id="@+id/goto_list"
            style="@style/MainTitle"
            android:drawableTop="@drawable/main_list"
            android:text="File List"/>

        <TextView
            android:id="@+id/goto_car_dock"
            style="@style/MainTitle"
            android:drawableTop="@drawable/main_car"
            android:text="Car Dock"/>

        <TextView
            android:id="@+id/goto_info"
            style="@style/MainTitle"
            android:drawableTop="@drawable/main_device"
            android:text="Device Info"/>

        <TextView
            android:id="@+id/goto_gps"
            style="@style/MainTitle"
            android:drawableTop="@drawable/main_gps"
            android:text="GPS"/>

        <TextView
            android:id="@+id/goto_qr"
            style="@style/MainTitle"
            android:drawableTop="@drawable/main_barcode_scan"
            android:text="QR Code"/>

        <TextView
            android:id="@+id/goto_sensors"
            style="@style/MainTitle"
            android:drawableTop="@drawable/main_sensors"
            android:text="Sensors"/>

        <TextView
            android:id="@+id/goto_wifi"
            style="@style/MainTitle"
            android:drawableTop="@drawable/main_wifi"
            android:text="WiFi Scanner"/>

        <TextView
            android:id="@+id/goto_scrum_poker"
            style="@style/MainTitle"
            android:drawableTop="@drawable/main_scrum"
            android:text="Scrum Poker"/>

        <TextView
            android:id="@+id/goto_camera"
            style="@style/MainTitle"
