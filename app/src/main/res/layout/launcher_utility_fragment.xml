<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Scroll"
    android:background="@color/black_overlay_darker"
    tools:ignore="HardcodedText">

    <GridLayout
        android:id="@+id/mainGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alignmentMode="alignBounds"
        android:columnCount="2"
        android:columnOrderPreserved="true"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/goto_scan"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_barcode_scan"
            android:text="Barcode Scan" />

        <TextView
            android:id="@+id/goto_osm_maps"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_maps"
            android:text="OSM Maps" />

        <TextView
            android:id="@+id/goto_files"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_file"
            android:text="File Browser" />

        <TextView
            android:id="@+id/goto_gps"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_gps"
            android:text="GPS" />

        <TextView
            android:id="@+id/goto_camera"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_camera"
            android:text="Camera Scales" />

        <TextView
            android:id="@+id/goto_main"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_utility"
            android:text="Utility" />

    </GridLayout>
</ScrollView>