<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Outer"
    tools:context=".poc.WelcomeActivity">

    <LinearLayout
        style="@style/Outer"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter ordernumber:"
                android:textSize="32sp"/>

            <TextView
                android:id="@+id/info_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="83756"
                android:textSize="49sp"/>
        </LinearLayout>

        <TableLayout
            android:id="@+id/griddy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@drawable/keyboard_divider"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:showDividers="beginning|middle|end">

            <TableRow style="@style/keyboard_row">

                <Button
                    android:id="@+id/key_1"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_1"/>

                <Button
                    android:id="@+id/key_2"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_2"/>

                <Button
                    android:id="@+id/key_3"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_3"/>
            </TableRow>

            <TableRow style="@style/keyboard_row">

                <Button
                    android:id="@+id/key_4"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_4"/>

                <Button
                    android:id="@+id/key_5"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_5"/>

                <Button
                    android:id="@+id/key_6"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_6"/>
            </TableRow>

            <TableRow style="@style/keyboard_row">

                <Button
                    android:id="@+id/key_7"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_7"/>

                <Button
                    android:id="@+id/key_8"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_8"/>

                <Button
                    android:id="@+id/key_9"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_9"/>
            </TableRow>

            <TableRow style="@style/keyboard_row">

                <Button
                    android:id="@+id/key_back"
                    style="@style/Button.POSKeyboard"
                    android:text="DEL"/>

                <Button
                    android:id="@+id/key_0"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_0"/>

                <Button
                    android:id="@+id/key_go"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_go"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <include
        android:id="@+id/welcome_wait"
        layout="@layout/activity_welcome_wait"/>
</RelativeLayout>