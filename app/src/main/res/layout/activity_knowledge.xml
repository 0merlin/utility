<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Outer"
    tools:context=".KnowledgeActivity">

    <LinearLayout
        android:id="@+id/row2"
        style="@style/KnowledgeRow"
        android:layout_alignParentBottom="true">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/answer_c"
            style="@style/KnowledgeAnswer"
            android:text="C; Answer C"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/answer_d"
            style="@style/KnowledgeAnswer"
            android:text="D; Answer 4"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row1"
        style="@style/KnowledgeRow"
        android:layout_above="@id/row2">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/answer_a"
            style="@style/KnowledgeAnswer"
            android:text="A; Answer 1"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/answer_b"
            style="@style/KnowledgeAnswer"
            android:text="B; Answer 2"/>
    </LinearLayout>

    <TextView
        android:id="@+id/question_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/row1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="4dp"
        android:text="Question"
        android:textSize="32sp"
        app:autoSizeTextType="uniform"/>

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>
</RelativeLayout>