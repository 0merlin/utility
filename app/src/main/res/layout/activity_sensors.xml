<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/OuterPadding">

    <TextView
        android:id="@+id/orientation"
        style="@style/Text.Large"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/light"
        style="@style/Text.Large"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/proximity"
        app:layout_constraintStart_toEndOf="@id/orientation"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/proximity"
        style="@style/Text.Large"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/light"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gravity"
        style="@style/Text.Large"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guide_vert_mid"
        app:layout_constraintEnd_toStartOf="@id/guide_mid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guide_vert_top" />

    <TextView
        android:id="@+id/magnetic"
        style="@style/Text.Large"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guide_vert_mid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guide_mid"
        app:layout_constraintTop_toTopOf="@id/guide_vert_top" />

    <TextView
        android:id="@+id/acceleration"
        style="@style/Text.Large"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guide_vert_bot"
        app:layout_constraintEnd_toEndOf="@id/guide_mid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guide_vert_mid" />

    <TextView
        android:id="@+id/gyroscope"
        style="@style/Text.Large"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/guide_vert_bot"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guide_mid"
        app:layout_constraintTop_toTopOf="@id/guide_vert_mid" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_vert_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_vert_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_vert_bot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_mid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
