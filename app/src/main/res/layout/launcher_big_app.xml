<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_columnWeight="1"
    android:layout_gravity="fill_horizontal"
    android:paddingTop="@dimen/big_launcher_padding"
    android:paddingBottom="@dimen/big_launcher_padding">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/app_icon_launcher_big"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/img"
            android:layout_width="@dimen/launcher_size"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/launcher_size_text"
            tools:text="TE" />

        <TextView
            android:id="@+id/title"
            android:layout_width="@dimen/launcher_size"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingBottom="2dp"
            android:textSize="14sp"
            tools:text="Application name" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>