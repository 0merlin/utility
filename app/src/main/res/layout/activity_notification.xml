<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".poc.NotificationActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/do_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Notification in a few seconds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/do_send_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Image Notification in a few seconds"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/do_send" />

</androidx.constraintlayout.widget.ConstraintLayout>