<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Scroll"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <GridLayout
        android:id="@+id/mainGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false">

        <TextView
            android:id="@+id/goto_test_bot"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_bot"
            android:text="Bot Interface" />

        <TextView
            android:id="@+id/goto_test_login"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_login"
            android:text="Login" />

        <TextView
            android:id="@+id/goto_demo"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_android_versions"
            android:text="Demo Screen" />
        <TextView
            android:id="@+id/goto_camera"
            style="@style/MainTitle"
            android:drawableTop="@drawable/ic_main_camera"
            android:text="Camera" />
    </GridLayout>

</ScrollView>