<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Outer"
    android:orientation="horizontal"
    android:weightSum="2"
    tools:context="zz.utility.poc.POSActivity">

    <com.journeyapps.barcodescanner.DecoratedBarcodeView
        android:id="@+id/barcode_scanner"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <RelativeLayout
        style="@style/Linear"
        android:layout_width="0dp"
        android:layout_weight="1">

        <TableLayout
            android:id="@+id/griddy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/white"
            android:divider="@drawable/keyboard_divider"
            android:orientation="vertical"
            android:showDividers="beginning|middle|end">

            <TableRow style="@style/keyboard_row">

                <Button
                    android:id="@+id/key_1"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_1"/>

                <Button
                    android:id="@+id/key_2"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_2"/>

                <Button
                    android:id="@+id/key_3"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_3"/>
            </TableRow>

            <TableRow style="@style/keyboard_row">

                <Button
                    android:id="@+id/key_4"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_4"/>

                <Button
                    android:id="@+id/key_5"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_5"/>

                <Button
                    android:id="@+id/key_6"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_6"/>
            </TableRow>

            <TableRow style="@style/keyboard_row">

                <Button
                    android:id="@+id/key_7"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_7"/>

                <Button
                    android:id="@+id/key_8"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_8"/>

                <Button
                    android:id="@+id/key_9"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_9"/>
            </TableRow>

            <TableRow style="@style/keyboard_row">

                <Button
                    android:id="@+id/key_0"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_0"/>

                <Button
                    android:id="@+id/key_dot"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_dot"/>

                <Button
                    android:id="@+id/key_go"
                    style="@style/Button.POSKeyboard"
                    android:text="@string/number_go"/>
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/scanned_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:gravity="center"/>

    </RelativeLayout>
</LinearLayout>
